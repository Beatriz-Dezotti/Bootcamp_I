#include <stdio.h>

int main() {
    int idade;

    printf("Digite sua idade: ");
    scanf("%d", &idade);

    if (idade <= 0) {
        printf("Idade inválida. Digite um numero maior que 0.\n");
    } else if (idade < 12) {
        printf("Você é uma Criança.\n");
    } else if (idade < 18) {
        printf("Você é um(a) Adolescente.\n");
    } else if (idade < 60) {
        printf("Você é um(a) Adulto(a).\n");
    } else {
        printf("Você é um(a) Idoso(a).\n");
    }

    return 0;
}

