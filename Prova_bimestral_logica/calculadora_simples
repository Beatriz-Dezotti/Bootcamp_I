#include <stdio.h>

int main() {
    int num1, num2;
    char operacao;


    printf("Digite o primeiro nimero: ");
    scanf("%d", &num1);

    printf("Digite o segundo nimero: ");
    scanf("%d", &num2);

    printf("Digite a operacao (+, -, *, /): ");
    scanf(" %c", &operacao); 

    
    switch(operacao) {
        case '+':
            printf("Resultado: %d\n", num1 + num2);
            break;
        case '-':
            printf("Resultado: %d\n", num1 - num2);
            break;
        case '*':
            printf("Resultado: %d\n", num1 * num2);
            break;
        case '/':
          
            if (num2 != 0) {
                printf("Resultado: %.2f\n", (float)num1 / num2);
            } else {
                printf("Erro: Divisao por zero!\n");
            }
            break;
        default:
            printf("Operação invalida!\n");
    }

    return 0;
}

